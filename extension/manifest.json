{
    "manifest_version": 2,
    "name": "Reporticle",
    "version": "0.1",
    "description": "An extension for rating websites and getting other recommended sources",
    "content_scripts": [
        {
            "matches": [
                "*://edition.cnn.com/*",
                "*://www.foxnews.com/*",
                "*://www.reddit.com/r/worldnews/comments/*"
            ],
            "js": [
                "communication.js",
                "ext.js"
            ]
        }
    ],
    "permissions": [
        "http://localhost:9292/*",
        "*://*/*"
    ]
}